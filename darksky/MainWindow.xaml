<Window x:Class="darksky.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:darksky"
        xmlns:v="clr-namespace:darksky.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">

    <StackPanel Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <v:SelectorView Grid.Row="0"/>
            <v:WeatherView  Grid.Row="1"/>
            <TextBlock Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="FORECAST"/>
        </Grid>
    </StackPanel>
</Window>
